{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": true,
    "rootDir": ".",
    "outDir": "build/dist",
    "declarationDir": "build/types",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "types" : ["node", "jasmine"],
    "strictNullChecks": true
  },
  "include": [
    "index.ts",
    "lib/**/*"
  ]
}
