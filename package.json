{
  "name": "shallow",
  "version": "0.0.1",
  "description": "Shallow rendering test utility for Angular",
  "main": "build/dist/index.js",
  "files": [
    "build",
    "LICENSE",
    "README"
  ],
  "typings": "build/types/index",
  "typescript": {
    "definition": "build/types/index"
  },
  "scripts": {
    "clean": "rm -rf build coverage",
    "lint": "tslint -t stylish --project tsconfig.json",
    "lint:fix": "npm run lint -- --fix",
    "build": "npm run clean && tsc",
    "release": "npm run lint && npm run test && npm run build && standard-version",
    "test": "karma start",
    "test:fix": "npm run lint:fix && npm run test",
    "test:watch": "npm test -- --auto-watch=true --single-run=false",
    "test:debug": "npm run test:watch -- --browsers=Chrome"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/getsaf/shallow.git"
  },
  "keywords": [
    "Angular",
    "Mock",
    "Testing",
    "TypeScript"
  ],
  "author": "Brandon Domingue <getsaf@gmail.com>",
  "contributors": [],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/getsaf/shallow/issues"
  },
  "homepage": "https://github.com/getsaf/shallow#readme",
  "dependencies": {
    "@angular/common": "5.x",
    "@angular/core": "5.x",
    "@angular/platform-browser": "5.x"
  },
  "devDependencies": {
    "@types/core-js": "^0.9.43",
    "@types/jasmine": "^2.5.53",
    "@types/node": "^8.0.17",
    "core-js": "^2.5.1",
    "jasmine-ts": "^0.2.1",
    "jsdom": "^11.6.2",
    "karma": "^2.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-jasmine": "^1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-typescript": "^3.0.9",
    "ng-mocks": "^5.0.0-rc7",
    "rxjs": ">= 5.0.0-beta.12",
    "standard-version": "^4.2.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.5.0",
    "typescript": "2.7.x",
    "zone.js": ">= 0.6.25"
  }
}
